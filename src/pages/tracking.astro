---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Track Your Order - FlipShip">
  <main class="pt-24 pb-12 min-h-screen flex flex-col">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold text-center mb-8 text-primary">Tra cứu đơn hàng</h1>
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <form class="space-y-6" id="tracking-form">
            <div>
              <label
                for="tracking-number"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Mã đơn hàng
              </label>
              <input
                type="text"
                id="tracking-number"
                name="tracking-number"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                placeholder="Nhập mã đơn hàng bạn cần tra cứu"
                required
              />
            </div>
            <button
              type="submit"
              class="w-full bg-primary text-white py-2 px-4 rounded-lg hover:bg-secondary transition"
            >
              Tra cứu
            </button>
          </form>

          <div id="tracking-result" class="mt-8 hidden">
            <h2 class="text-xl font-semibold mb-4">Thông tin đơn hàng</h2>
            <div class="space-y-4">
              <div class="p-4 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                  <div class="ml-4">
                    <p class="font-semibold">Order Received</p>
                    <p class="text-sm text-gray-600">
                      Your order has been received and is being processed
                    </p>
                  </div>
                </div>
              </div>
              <!-- Add more status steps here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    const trackingForm = document.getElementById("tracking-form");
    const trackingResult = document.getElementById("tracking-result");

    if (trackingForm && trackingResult) {
      trackingForm.addEventListener("submit", (e) => {
        e.preventDefault();
        trackingResult.classList.remove("hidden");
        // Here you would typically make an API call to get real tracking data
      });
    }
  </script>
</Layout>
