---
import Layout from "../layouts/Layout.astro";
import { OptionCard } from "../components/download";

const downloadOptions = [
  {
    icon: `<svg width="64px" height="64px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M17 17H17.01M17.4 14H18C18.9319 14 19.3978 14 19.7654 14.1522C20.2554 14.3552 20.6448 14.7446 20.8478 15.2346C21 15.6022 21 16.0681 21 17C21 17.9319 21 18.3978 20.8478 18.7654C20.6448 19.2554 20.2554 19.6448 19.7654 19.8478C19.3978 20 18.9319 20 18 20H6C5.06812 20 4.60218 20 4.23463 19.8478C3.74458 19.6448 3.35523 19.2554 3.15224 18.7654C3 18.3978 3 17.9319 3 17C3 16.0681 3 15.6022 3.15224 15.2346C3.35523 14.7446 3.74458 14.3552 4.23463 14.1522C4.60218 14 5.06812 14 6 14H6.6M12 15V4M12 15L9 12M12 15L15 12" stroke="#005cb8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>`,
    title: "Tải Ứng Dụng FlipShip (APK)",
    description:
      "Tải trực tiếp file cài đặt APK cho Android để trải nghiệm FlipShip ngay lập tức.",
    image: "/download/apk.png",
    alt: "Tải ứng dụng FlipShip file APK",
    link: "/download/flipship-latest.apk",
    linkText: "Tải APK Ngay",
    available: true,
  },
  {
    icon: `<svg width="64px" height="64px" viewBox="0 0 192 192" xmlns="http://www.w3.org/2000/svg" fill="#FF712C"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M0 0h192v192H0z" style="fill:none"></path><path d="M156.84 109.93 54.96 167.87c-10.68 6.07-23.94-1.64-23.94-13.93V38.06c0-12.29 13.26-20 23.94-13.93l101.88 57.94c10.8 6.14 10.8 21.71 0 27.85Z" style="stroke:#FF712C;stroke-miterlimit:10;stroke-width:12px;fill:none"></path><path d="m35 33 88 90m-88 34.61L124 67" style="fill:none;stroke-linecap:round;stroke:#FF712C;stroke-miterlimit:10;stroke-width:12px"></path></g></svg>`,
    title: "Ứng Dụng FlipShip trên Google Play",
    description:
      "Phiên bản dành cho Google Play đang được hoàn thiện. Hãy theo dõi để không bỏ lỡ!",
    image: "/download/android.png",
    alt: "Ứng dụng FlipShip trên Google Play (Sắp ra mắt)",
    link: "#",
    linkText: "Sắp Ra Mắt",
    available: false,
  },
  {
    icon: `<svg width="64px" height="64px" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" stroke-width="3" stroke="#000000" fill="none"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><line x1="24.03" y1="39.07" x2="22.37" y2="41.97" stroke-linecap="round" stroke-linejoin="round"></line><line x1="34.86" y1="20.12" x2="26.05" y2="35.53" stroke-linecap="round" stroke-linejoin="round"></line><line x1="34.19" y1="28.31" x2="42.17" y2="41.97" stroke-linecap="round" stroke-linejoin="round"></line><line x1="29.39" y1="20.12" x2="32.16" y2="24.84" stroke-linecap="round" stroke-linejoin="round"></line><line x1="19.54" y1="35.53" x2="34.39" y2="35.53" stroke-linecap="round" stroke-linejoin="round"></line><line x1="44.71" y1="35.53" x2="38.41" y2="35.53" stroke-linecap="round" stroke-linejoin="round"></line><rect x="10.23" y="10.23" width="43.55" height="43.55" rx="10.31" stroke-linecap="round" stroke-linejoin="round"></rect></g></svg>`,
    title: "Ứng Dụng FlipShip cho iOS",
    description:
      "Chúng tôi đang phát triển phiên bản cho iOS. Đăng ký để nhận thông báo sớm nhất!",
    image: "/download/ios.png",
    alt: "Ứng dụng FlipShip trên iOS (Sắp ra mắt)",
    link: "#",
    linkText: "Sắp Ra Mắt",
    available: false,
  },
];
---

<Layout title="FlipShip - Tải Ứng Dụng">
  <main class="font-sans min-h-screen bg-gray-50">
    <section
      class="py-20 md:py-28 bg-gradient-to-br from-primary to-secondary text-white text-center relative overflow-hidden"
    >
      <div class="max-w-3xl mx-auto px-6 z-10 relative" data-aos="fade-up">
        <h1
          class="text-4xl md:text-5xl font-extrabold mb-6 leading-tight tracking-tight"
        >
          Tải Ứng Dụng FlipShip Ngay Hôm Nay
        </h1>
        <p class="text-lg md:text-xl opacity-90 mb-10 max-w-2xl mx-auto">
          Nâng tầm quản lý vận chuyển của bạn. Tải ứng dụng FlipShip để trải
          nghiệm sự tiện lợi vượt trội, mọi lúc mọi nơi!
        </p>
        <div
          class="flex justify-center flex-wrap gap-4"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          {
            downloadOptions.map((option) => (
              <a
                href={option.available ? option.link : "#"}
                class={`inline-flex items-center px-8 py-4 rounded-full font-semibold text-lg shadow-lg transform transition-all duration-300
                            ${
                              option.available
                                ? "bg-white text-primary hover:scale-105 hover:shadow-xl"
                                : "bg-gray-400 text-gray-700 cursor-not-allowed opacity-80"
                            }
                            `}
                aria-label={option.linkText}
                title={option.available ? option.linkText : option.title}
              >
                {option.title.includes("APK") && (
                  <svg
                    width="32px"
                    height="32px"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <g id="SVGRepo_bgCarrier" stroke-width="0" />
                    <g
                      id="SVGRepo_tracerCarrier"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                    <g id="SVGRepo_iconCarrier">
                      {" "}
                      <path
                        d="M17 17H17.01M17.4 14H18C18.9319 14 19.3978 14 19.7654 14.1522C20.2554 14.3552 20.6448 14.7446 20.8478 15.2346C21 15.6022 21 16.0681 21 17C21 17.9319 21 18.3978 20.8478 18.7654C20.6448 19.2554 20.2554 19.6448 19.7654 19.8478C19.3978 20 18.9319 20 18 20H6C5.06812 20 4.60218 20 4.23463 19.8478C3.74458 19.6448 3.35523 19.2554 3.15224 18.7654C3 18.3978 3 17.9319 3 17C3 16.0681 3 15.6022 3.15224 15.2346C3.35523 14.7446 3.74458 14.3552 4.23463 14.1522C4.60218 14 5.06812 14 6 14H6.6M12 15V4M12 15L9 12M12 15L15 12"
                        stroke="#000000"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />{" "}
                    </g>
                  </svg>
                )}
                {option.title.includes("Google Play") && (
                  <svg
                    width="32px"
                    height="32px"
                    viewBox="0 0 192 192"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="#000000"
                  >
                    <g id="SVGRepo_bgCarrier" stroke-width="0" />
                    <g
                      id="SVGRepo_tracerCarrier"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                    <g id="SVGRepo_iconCarrier">
                      <path d="M0 0h192v192H0z" style="fill:none" />
                      <path
                        d="M156.84 109.93 54.96 167.87c-10.68 6.07-23.94-1.64-23.94-13.93V38.06c0-12.29 13.26-20 23.94-13.93l101.88 57.94c10.8 6.14 10.8 21.71 0 27.85Z"
                        style="stroke:#000000;stroke-miterlimit:10;stroke-width:12px;fill:none"
                      />
                      <path
                        d="m35 33 88 90m-88 34.61L124 67"
                        style="fill:none;stroke-linecap:round;stroke:#000000;stroke-miterlimit:10;stroke-width:12px"
                      />
                    </g>
                  </svg>
                )}
                {option.title.includes("iOS") && (
                  <svg
                    width="32px"
                    height="32px"
                    viewBox="0 0 64 64"
                    xmlns="http://www.w3.org/2000/svg"
                    stroke-width="3"
                    stroke="#000000"
                    fill="none"
                  >
                    <g id="SVGRepo_bgCarrier" stroke-width="0" />
                    <g
                      id="SVGRepo_tracerCarrier"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                    <g id="SVGRepo_iconCarrier">
                      <line
                        x1="24.03"
                        y1="39.07"
                        x2="22.37"
                        y2="41.97"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="34.86"
                        y1="20.12"
                        x2="26.05"
                        y2="35.53"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="34.19"
                        y1="28.31"
                        x2="42.17"
                        y2="41.97"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="29.39"
                        y1="20.12"
                        x2="32.16"
                        y2="24.84"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="19.54"
                        y1="35.53"
                        x2="34.39"
                        y2="35.53"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <line
                        x1="44.71"
                        y1="35.53"
                        x2="38.41"
                        y2="35.53"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <rect
                        x="10.23"
                        y="10.23"
                        width="43.55"
                        height="43.55"
                        rx="10.31"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </g>
                  </svg>
                )}
                {option.linkText}
              </a>
            ))
          }
        </div>
      </div>
      <div
        class="absolute inset-0 z-0 opacity-15"
        style="background-image: url('/download/background-pattern.png'); background-size: cover; background-repeat: no-repeat; background-position: center;"
      >
      </div>
    </section>

    <section class="max-w-5xl mx-auto px-6 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        {
          downloadOptions.map((option, index) => (
            <OptionCard option={option} index={index} />
          ))
        }
      </div>
    </section>
  </main>
</Layout>
