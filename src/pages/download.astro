---
import Layout from "../layouts/Layout.astro";

const downloadOptions = [
  {
    icon: `
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-secondary" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 3v12m0 0l-4-4m4 4l4-4M4 16h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    `,
    title: "Ứng Dụng FlipShip cho Android",
    description: "Tối ưu hóa quy trình vận chuyển của bạn với ứng dụng FlipShip trên nền tảng Android. Quản lý đơn hàng, theo dõi vận chuyển và nhiều hơn nữa một cách dễ dàng.",
    image: "https://cdn.pixabay.com/photo/2016/11/19/14/00/code-1839406_1280.jpg",
    alt: "Ứng dụng FlipShip trên Android",
    link: "https://play.google.com/store/apps/details?id=com.flipship.android",
    linkText: "Tải từ Google Play",
    available: true,
  },
  {
    icon: `
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 3v12m0 0l-4-4m4 4l4-4M4 16h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    `,
    title: "Ứng Dụng FlipShip cho iOS (Sắp Ra Mắt)",
    description: "Chúng tôi đang nỗ lực mang đến trải nghiệm FlipShip tuyệt vời trên iOS. Hãy theo dõi để nhận thông báo khi ứng dụng chính thức ra mắt.",
    image: "https://cdn.pixabay.com/photo/2017/08/06/00/09/people-2582757_1280.jpg",
    alt: "Ứng dụng FlipShip trên iOS",
    linkText: "Thông Báo Ra Mắt",
    available: false,
  },
];
---

<Layout title="FlipShip - Tải Ứng Dụng">
  <main class="font-sans min-h-screen bg-gray-50">
    <section class="py-16 md:py-24">
      <div class="container mx-auto px-6 lg:px-8 max-w-5xl text-center">
        <h1 class="text-4xl font-bold text-primary mb-6 tracking-tight">Trải Nghiệm FlipShip Trên Thiết Bị Di Động</h1>
        <p class="text-gray-600 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
          Nâng cao hiệu quả quản lý vận chuyển của bạn với ứng dụng FlipShip. Chọn nền tảng phù hợp và bắt đầu ngay hôm nay.
        </p>
      </div>

      <div class="container mx-auto px-6 lg:px-8 max-w-6xl grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
        {downloadOptions.map((option, index) => (
          <article
            class="bg-white p-8 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 border border-gray-200 flex items-center gap-6"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <img
              src={option.image}
              alt={option.alt}
              class="w-1/3 h-32 object-cover rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300"
              loading="lazy"
            />
            <div class="w-2/3">
              <div class="mb-4" set:html={option.icon} />
              <h2 class="text-2xl font-semibold text-gray-900 mb-2">{option.title}</h2>
              <p class="text-gray-600 mb-4 leading-relaxed text-lg">{option.description}</p>
              <div>
                {option.available ? (
                  <a
                    href={option.link}
                    class="inline-block bg-secondary text-white px-6 py-3 rounded-lg font-semibold text-lg hover:bg-gray-200 hover:text-secondary transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-secondary focus:ring-offset-2"
                    aria-label={option.linkText}
                  >
                    {option.linkText}
                  </a>
                ) : (
                  <span class="inline-block text-primary font-semibold text-lg">{option.linkText}</span>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
</Layout>