---
import "aos/dist/aos.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <nav class="bg-white shadow-md fixed w-full z-50">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="text-2xl font-bold text-primary">FlipShip</a>
          <div class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-700 hover:text-primary">Trang chủ</a>
            <a href="/services" class="text-gray-700 hover:text-primary"
              >Các dịch vụ</a
            >
            <a href="/about" class="text-gray-700 hover:text-primary"
              >Về chúng tôi</a
            >
            <a href="/tracking" class="text-gray-700 hover:text-primary"
              >Theo dõi đơn hàng</a
            >
            <a href="/contact" class="text-gray-700 hover:text-primary"
              >Liên hệ</a
            >
          </div>
          <button class="md:hidden" id="menu-button">
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        <div class="hidden md:hidden" id="mobile-menu">
          <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/" class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Trang chủ</a
            >
            <a
              href="/services"
              class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Các dịch vụ</a
            >
            <a
              href="/about"
              class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Về chúng tôi</a
            >
            <a
              href="/tracking"
              class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Theo dõi đơn hàng</a
            >
            <a
              href="/contact"
              class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Liên hệ</a
            >
          </div>
        </div>
      </div>
    </nav>

    <slot />

    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">FlipShip</h3>
            <p class="text-gray-400">
              Tối ưu hóa chuỗi cung ứng, kiến tạo tương lai bền vững
            </p>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Liên kết nhanh</h4>
            <ul class="space-y-2">
              <li>
                <a href="/services" class="text-gray-400 hover:text-white"
                  >Các dịch vụ</a
                >
              </li>
              <li>
                <a href="/about" class="text-gray-400 hover:text-white"
                  >Về chúng tôi</a
                >
              </li>
              <li>
                <a href="/contact" class="text-gray-400 hover:text-white"
                  >Liên hệ</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Các dịch vụ</h4>
            <ul class="space-y-2">
              <li>
                <a href="/services" class="text-gray-400 hover:text-white"
                  >Vận chuyển cấp tốc</a
                >
              </li>
              <li>
                <a href="/services" class="text-gray-400 hover:text-white"
                  >Vận chuyển hàng quá khổ</a
                >
              </li>
              <li>
                <a href="/services" class="text-gray-400 hover:text-white"
                  >Vận chuyển tiêu chuẩn</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Thông tin liên hệ</h4>
            <ul class="space-y-2 text-gray-400">
              <li>
                Tòa nhà tài chính Bitexco, Lầu 52, Quận 1, TP. Hồ Chí Minh
              </li>
              <li>contact@flipship.com</li>
              <li>+84 234 567 890</li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <script>
      import Aos from "aos";

      document.addEventListener("DOMContentLoaded", () => {
        // Mobile menu toggle
        const menuButton = document.getElementById("menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        if (menuButton && mobileMenu) {
          menuButton.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
          });
        }

        // Initialize AOS
        Aos.init();
      });
    </script>
  </body>
</html>
