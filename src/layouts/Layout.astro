---
import "aos/dist/aos.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <nav
      class="bg-primary shadow-md fixed w-full z-50 transition-all duration-300"
    >
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="text-2xl font-bold text-white">FlipShip</a>
          <div class="hidden md:flex space-x-8">
            <a href="/" class="text-white hover:text-secondary">Trang chủ</a>
            <a href="/services" class="text-white hover:text-secondary"
              >Các dịch vụ</a
            >
            <a href="/about" class="text-white hover:text-secondary"
              >Về chúng tôi</a
            >
            <a href="/tracking" class="text-white hover:text-secondary"
              >Theo dõi đơn hàng</a
            >
            <a href="/contact" class="text-white hover:text-secondary"
              >Liên hệ</a
            >
          </div>
          <button class="md:hidden" id="menu-button">
            <svg
              class="w-6 h-6 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        <div class="hidden md:hidden bg-secondary" id="mobile-menu">
          <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/" class="block px-3 py-2 text-white hover:text-primary"
              >Trang chủ</a
            >
            <a
              href="/services"
              class="block px-3 py-2 text-white hover:text-primary"
              >Các dịch vụ</a
            >
            <a
              href="/about"
              class="block px-3 py-2 text-white hover:text-primary"
              >Về chúng tôi</a
            >
            <a
              href="/tracking"
              class="block px-3 py-2 text-white hover:text-primary"
              >Theo dõi đơn hàng</a
            >
            <a
              href="/contact"
              class="block px-3 py-2 text-white hover:text-primary">Liên hệ</a
            >
          </div>
        </div>
      </div>
    </nav>

    <slot />

    <!-- Messenger Button -->
    <div
