    </div>

    <footer class="bg-primary text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">FlipShip</h3>
            <p class="text-gray-200">
              Tối ưu hóa chuỗi cung ứng, kiến tạo tương lai bền vững
            </p>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Liên kết nhanh</h4>
            <ul class="space-y-2">
              <li>
                <a href="/services" class="text-gray-200 hover:text-white"
                  >Các dịch vụ</a
                >
              </li>
              <li>
                <a href="/about" class="text-gray-200 hover:text-white"
                  >Về chúng tôi</a
                >
              </li>
              <li>
                <a href="/contact" class="text-gray-200 hover:text-white"
                  >Liên hệ</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Các dịch vụ</h4>
            <ul class="space-y-2">
              <li>
                <a href="/services" class="text-gray-200 hover:text-white"
                  >Vận chuyển cấp tốc</a
                >
              </li>
              <li>
                <a href="/services" class="text-gray-200 hover:text-white"
                  >Vận chuyển hàng quá khổ</a
                >
              </li>
              <li>
                <a href="/services" class="text-gray-200 hover:text-white"
                  >Vận chuyển tiêu chuẩn</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Thông tin liên hệ</h4>
            <ul class="space-y-2 text-gray-200">
              <li>
                Tòa nhà tài chính Bitexco, Lầu 52, Quận 1, TP. Hồ Chí Minh
              </li>
              <li>contact@flipship.com</li>
              <li>+84 234 567 890</li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <script>
      import Aos from "aos";

      document.addEventListener("DOMContentLoaded", () => {
        // Mobile menu toggle
        const menuButton = document.getElementById("menu-button");
        const mobileMenu = document.getElementById("mobile-menu");
        const nav = document.querySelector("nav");

        if (menuButton && mobileMenu) {
          menuButton.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
          });
        }

        // Initialize AOS
        Aos.init();

        // Hide/show header on scroll
        let lastScrollTop = 0;

        window.addEventListener("scroll", () => {
          let scrollTop =
            window.pageYOffset || document.documentElement.scrollTop;

          if (scrollTop > lastScrollTop) {
            nav.classList.add("hidden-nav");
          } else {
            nav.classList.remove("hidden-nav");
          }

          lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
        });
      });
    </script>

    <style>
      .hidden-nav {
        transform: translateY(-100%);
      }
    </style>
  </body>
</html>
