---
import "aos/dist/aos.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <nav class="bg-white shadow-md fixed w-full z-50">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="text-2xl font-bold text-primary">FlipShip</a>
          <div class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-700 hover:text-primary">Trang chủ</a>
            <a href="/services" class="text-gray-700 hover:text-primary"
              >Các dịch vụ</a
            >
            <a href="/about" class="text-gray-700 hover:text-primary"
              >Về chúng tôi</a
            >
            <a href="/tracking" class="text-gray-700 hover:text-primary"
              >Theo dõi đơn hàng</a
            >
            <a href="/contact" class="text-gray-700 hover:text-primary"
              >Liên hệ</a
            >
          </div>
          <button class="md:hidden" id="menu-button">
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        <div class="hidden md:hidden" id="mobile-menu">
          <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/" class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Trang chủ</a
            >
            <a
              href="/services"
              class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Các dịch vụ</a
            >
            <a
              href="/about"
              class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Về chúng tôi</a
            >
            <a
              href="/tracking"
              class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Theo dõi đơn hàng</a
            >
            <a
              href="/contact"
              class="block px-3 py-2 text-gray-700 hover:text-primary"
              >Liên hệ</a
            >
          </div>
        </div>
      </div>
    </nav>

    <slot />

    <!-- Messenger Button -->
    <a
      href="https://m.me/PAGE_ID"
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-4 z-50 w-14 h-14 bg-[#0084FF] rounded-full flex items-center justify-center shadow-lg hover:bg-[#0066CC] transition-colors"
      aria-label="Chat với chúng tôi qua Messenger"
    >
      <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M12 0C5.37 0 0 4.91 0 10.91c0 3.31 1.59 6.27 4.08 8.14v4.45l3.94-2.17c1.05.29 2.14.45 3.28.45 6.63 0 12-4.91 12-10.91S18.63 0 12 0zm1.19 15.11l-3.14-3.31-5.86 3.31 6.45-6.87 3.14 3.31 5.86-3.31-6.45 6.87z"
        ></path>
      </svg>
    </a>

    <!-- Zalo Button -->
    <a
      href="https://zalo.me/PHONE_NUMBER"
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-24 right-4 z-50 w-14 h-14 bg-[#0068FF] rounded-full flex items-center justify-center shadow-lg hover:bg-[#0056D2] transition-colors"
      aria-label="Chat với chúng tôi qua Zalo"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-8 h-8 text-white"
        viewBox="0 0 48 48"
      >
        <path
          fill="#2962ff"
          d="M15,36V6.827l-1.211-0.811C8.64,8.083,5,13.112,5,19v10c0,7.732,6.268,14,14,14h10	c4.722,0,8.883-2.348,11.417-5.931V36H15z"
        ></path>
        <path
          fill="#eee"
          d="M29,5H19c-1.845,0-3.601,0.366-5.214,1.014C10.453,9.25,8,14.528,8,19	c0,6.771,0.936,10.735,3.712,14.607c0.216,0.301,0.357,0.653,0.376,1.022c0.043,0.835-0.129,2.365-1.634,3.742	c-0.162,0.148-0.059,0.419,0.16,0.428c0.942,0.041,2.843-0.014,4.797-0.877c0.557-0.246,1.191-0.203,1.729,0.083	C20.453,39.764,24.333,40,28,40c4.676,0,9.339-1.04,12.417-2.916C42.038,34.799,43,32.014,43,29V19C43,11.268,36.732,5,29,5z"
        ></path>
        <path
          fill="#2962ff"
          d="M36.75,27C34.683,27,33,25.317,33,23.25s1.683-3.75,3.75-3.75s3.75,1.683,3.75,3.75	S38.817,27,36.75,27z M36.75,21c-1.24,0-2.25,1.01-2.25,2.25s1.01,2.25,2.25,2.25S39,24.49,39,23.25S37.99,21,36.75,21z"
        ></path>
        <path
          fill="#2962ff"
          d="M31.5,27h-1c-0.276,0-0.5-0.224-0.5-0.5V18h1.5V27z"></path>
        <path
          fill="#2962ff"
          d="M27,19.75v0.519c-0.629-0.476-1.403-0.769-2.25-0.769c-2.067,0-3.75,1.683-3.75,3.75	S22.683,27,24.75,27c0.847,0,1.621-0.293,2.25-0.769V26.5c0,0.276,0.224,0.5,0.5,0.5h1v-7.25H27z M24.75,25.5	c-1.24,0-2.25-1.01-2.25-2.25S23.51,21,24.75,21S27,22.01,27,23.25S25.99,25.5,24.75,25.5z"
        ></path>
        <path
          fill="#2962ff"
          d="M21.25,18h-8v1.5h5.321L13,26h0.026c-0.163,0.211-0.276,0.463-0.276,0.75V27h7.5	c0.276,0,0.5-0.224,0.5-0.5v-1h-5.321L21,19h-0.026c0.163-0.211,0.276-0.463,0.276-0.75V18z"
        ></path>
      </svg>
    </a>

    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">FlipShip</h3>
            <p class="text-gray-400">
              Tối ưu hóa chuỗi cung ứng, kiến tạo tương lai bền vững
            </p>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Liên kết nhanh</h4>
            <ul class="space-y-2">
              <li>
                <a href="/services" class="text-gray-400 hover:text-white"
                  >Các dịch vụ</a
                >
              </li>
              <li>
                <a href="/about" class="text-gray-400 hover:text-white"
                  >Về chúng tôi</a
                >
              </li>
              <li>
                <a href="/contact" class="text-gray-400 hover:text-white"
                  >Liên hệ</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Các dịch vụ</h4>
            <ul class="space-y-2">
              <li>
                <a href="/services" class="text-gray-400 hover:text-white"
                  >Vận chuyển cấp tốc</a
                >
              </li>
              <li>
                <a href="/services" class="text-gray-400 hover:text-white"
                  >Vận chuyển hàng quá khổ</a
                >
              </li>
              <li>
                <a href="/services" class="text-gray-400 hover:text-white"
                  >Vận chuyển tiêu chuẩn</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Thông tin liên hệ</h4>
            <ul class="space-y-2 text-gray-400">
              <li>
                Tòa nhà tài chính Bitexco, Lầu 52, Quận 1, TP. Hồ Chí Minh
              </li>
              <li>contact@flipship.com</li>
              <li>+84 234 567 890</li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <script>
      import Aos from "aos";

      document.addEventListener("DOMContentLoaded", () => {
        // Mobile menu toggle
        const menuButton = document.getElementById("menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        if (menuButton && mobileMenu) {
          menuButton.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
          });
        }

        // Initialize AOS
        Aos.init();
      });
    </script>
  </body>
</html>
