---
const team = [
  {
    name: "Nguyễn Thành Nhân",
    role: "Giám Đốc Điều Hành (CEO)",
    description:
      "Lãnh đạo chiến lược, tăng trưởng kinh doanh, giám sát tài chính.",
  },
  {
    name: "Lê Thuỳ Trang",
    role: "Giám Đốc Tài Chính (CFO)",
    description:
      "Lập kế hoạch tài chính, quản lý ngân sách, điều hành dòng tiền.",
  },
  {
    name: "Phạm Nguyễn Trọng Hùng",
    role: "Giám Đốc Marketing (CMO)",
    description:
      "Phát triển chiến lược marketing, quản lý thương hiệu, nghiên cứu thị trường.",
  },
  {
    name: "Nguyễn Quang Triết",
    role: "Giám Đốc Vận Hành (COO)",
    description: "Thực thi vận hành, cải thiện quy trình, lãnh đạo đội ngũ.",
  },
  {
    alt: "Trần Giang Khánh",
    name: "Trần Giang Khánh",
    role: "Giám Đốc Công Nghệ (CTO)",
    description: "Đổi mới công nghệ, quản lý hạ tầng, tối ưu chi phí CNTT.",
  },
  {
    name: "Trương Tấn Dũng",
    role: "Giám Đốc Sản Phẩm (CPO)",
    description: "Định hướng sản phẩm, thiết kế UI/UX, lãnh đạo phát triển.",
  },
];
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4 text-secondary">
      Đội Ngũ Của Chúng Tôi
    </h2>
    <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">
      Đội ngũ FlipShip bao gồm những chuyên gia giàu kinh nghiệm trong lĩnh vực
      logistics và công nghệ, luôn sẵn sàng phục vụ bạn.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        team.map((member, index) => (
          <div
            class="bg-gray-50 rounded-lg shadow-md group transition-colors duration-300"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="group-hover:bg-primary p-6 rounded-lg transition-colors">
              <h3 class="text-xl font-semibold text-center mb-2 text-gray-800 transition-colors duration-300 group-hover:text-white">
                {member.name}
              </h3>
              <p class="text-gray-600 text-center transition-colors duration-300 group-hover:text-white">
                {member.role}
              </p>
              <p class="text-gray-600 text-center mt-2 transition-colors duration-300 group-hover:text-white">
                {member.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
